

        <main class="search">
            <!-- Search Page (Only for logged-in users) -->
            <section id="search">
                <h2>Search by Location</h2>

                <form class="search-wrapper cf" method="POST">
                    <input id="#search-input" type="text" name="text" placeholder="Search here..." required value="{{text}}"/>
                    <button type="submit">Search</button>
                </form>

                <div id="search-container">
                    <ul class="card-wrapper">
                    {{#each maches}}
                    {{>searchAnimal}}
                    {{/each}}
                    </ul>

                    {{#if noMaches}}
                    <div id="no-post">
                        <h2>There are no results found.</h2>
                    </div>
                    {{/if}}
                </div>
            </section>
        </main>
